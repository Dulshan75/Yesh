<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".RegistrationActivity"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/reg_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/todo"
            android:src="@mipmap/regbg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name"
            android:layout_width="322dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:text="@string/name"
            android:textColor="#7C06020C"
            app:layout_constrainWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="LabelFor,MissingConstraints"
            tools:layout_editor_absoluteY="220dp" />

        <EditText
            android:id="@+id/gmail_reg"
            android:layout_width="322dp"
            android:layout_height="47dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/account"
            android:drawablePadding="10dp"
            android:elevation="3dp"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:text="@string/gmail"
            android:textColor="#7C06020C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            tools:ignore="LabelFor,MissingConstraints"
            tools:layout_editor_absoluteY="280dp"
            tools:targetApi="lollipop" /><![CDATA[

    ]]><EditText
        android:id="@+id/password_reg"
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/key_log"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:padding="13dp"
        android:text="@string/password"
        android:textColor="#7C06020C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gmail_reg"
        app:layout_constraintWidth_percent=".8"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteY="342dp"
        tools:targetApi="lollipop" /><![CDATA[

    ]]><Button
        android:id="@+id/reg_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="248dp"
        android:padding="14dp"
        android:textStyle="bold"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        app:layout_constaintTop_toBottomOf="@+id/password_reg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" /><![CDATA[

    ]]><TextView
        android:textStyle="bold"
        android:layout_width="188dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="140dp"
        android:text="@string/already_have_an_account"
        app:layout_constraintBottom_toBottomOf="paent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStat_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_btn"
        app:layout_constraintVertical_bias=".2" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/sign_in"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="496dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
